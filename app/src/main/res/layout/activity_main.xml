<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<!--   Judul Box.id-->
   <ImageView
       android:id="@+id/header_title"
       android:layout_width="219dp"
       android:layout_height="90dp"
       android:src="@drawable/box_id"
       android:layout_marginTop="50dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">

   </ImageView>

<!--   Header 2 "Solusi Pindahanmu-->
   <TextView
       android:id="@+id/header2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Solusi Pindahanmu"
       android:textSize="32dp"
       android:textColor="#2320AD"
       android:layout_marginTop="60dp"
       app:layout_constraintTop_toBottomOf="@+id/header_title"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent">

   </TextView>

<!--   Header 3 "Pindah barang...."-->
   <TextView
       android:id="@+id/header3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Pindah barang dari tempatmu hanya \n lewat genggaman tangan"
       android:textSize="15dp"
       android:textColor="#797979"
       android:gravity="center"
       android:layout_marginTop="60dp"
       app:layout_constraintTop_toBottomOf="@+id/header2"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent">

   </TextView>

<!--  Register Button -->
   <Button
       android:id="@+id/bt_direct_to_register"
       android:layout_width="326dp"
       android:layout_height="59dp"
       android:background="@drawable/button_blue"
       android:layout_marginTop="70dp"
       android:text="Register"
       android:textSize="20dp"
       android:textColor="@color/white"
       app:layout_constraintTop_toBottomOf="@id/header3"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent">

   </Button>

   <Button
       android:id="@+id/bt_direct_to_login"
       android:layout_width="326dp"
       android:layout_height="59dp"
       android:background="@drawable/button_white"
       android:layout_marginTop="20dp"
       android:text="Login"
       android:textSize="20dp"
       android:textColor="#2320AD"
       app:layout_constraintTop_toBottomOf="@+id/bt_direct_to_register"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent">

   </Button>


   <TextView
       android:id="@+id/tv_login_admin"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginBottom="20dp"
       android:text="Login Sebagai Admin"
       android:textSize="15dp"
       android:textColor="#797979"
       android:gravity="center"
       android:layout_marginTop="60dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent">

   </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>